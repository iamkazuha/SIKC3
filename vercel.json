{
    "version": 2,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        { 
            "src": "/dist/(.*)", 
            "dest": "/dist/$1" 
        },
        { 
            "src": "/(.*)", 
            "dest": "/api/index.php" 
        }
    ],
    "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
    "outputDirectory": "dist"
}